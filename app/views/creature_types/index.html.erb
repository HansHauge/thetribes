<p id="notice"><%= notice %></p>

<h1>Creature Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @creature_types.each do |creature_type| %>
      <tr>
        <td>
          <%= link_to creature_type.name, creature_type %>
        </td>
        <% if current_user.game_master? %>
          <td>
            <%= link_to 'Edit', edit_creature_type_path(creature_type) %>
          </td>
          <td>
            <%= link_to 'Destroy', creature_type, method: :delete, data: {
              confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.game_master? %>
  <%= link_to 'New Creature Type', new_creature_type_path %>
<% end %>
